<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <TextView
        android:id="@+id/tvHeader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Opgave App"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dp"/>

    <LinearLayout
        android:id="@+id/bottomNav"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:weightSum="3">

        <Button
            android:id="@+id/btnNavTasks"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="ðŸ“‹\nOpgaver"
            android:textSize="12sp"/>
        <Button
            android:id="@+id/btnNavHabits"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="ðŸ”\nVaner"
            android:textSize="12sp"/>
        <Button
            android:id="@+id/btnNavMoney"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="ðŸ’°\nÃ˜konomi"
            android:textSize="12sp"/>
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/tvHeader"
        android:layout_above="@id/bottomNav"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/layoutTasks"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="visible">

                <EditText
                    android:id="@+id/etTaskInput"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Ny opgave titel..."/>
                <Button
                    android:id="@+id/btnAddTask"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="TilfÃ¸j Opgave"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Aktive Opgaver"
                    android:textStyle="bold"
                    android:layout_marginTop="10dp"/>
                <LinearLayout
                    android:id="@+id/containerActiveTasks"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Afsluttede Opgaver"
                    android:textStyle="bold"
                    android:layout_marginTop="20dp"/>
                <LinearLayout
                    android:id="@+id/containerDoneTasks"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/layoutHabits"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone">

                <EditText
                    android:id="@+id/etHabitInput"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Ny vane (fx: Drik vand)..."/>
                <Button
                    android:id="@+id/btnAddHabit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Opret Vane"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Mine Vaner"
                    android:textStyle="bold"
                    android:layout_marginTop="10dp"/>
                <LinearLayout
                    android:id="@+id/containerHabits"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/layoutMoney"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone">

                <TextView
                    android:id="@+id/tvBalance"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="ðŸ’° Saldo: 0 kr"
                    android:textSize="30sp"
                    android:gravity="center"
                    android:textColor="#4CAF50"
                    android:layout_marginBottom="20dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Registrer kÃ¸b (Minus)"
                    android:textStyle="bold"/>
                <EditText
                    android:id="@+id/etSpendDesc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Hvad har du kÃ¸bt?"/>
                <EditText
                    android:id="@+id/etSpendAmount"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="BelÃ¸b (kr)"
                    android:inputType="number"/>
                <Button
                    android:id="@+id/btnSpend"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Registrer KÃ¸b ðŸ›’"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Historik"
                    android:textStyle="bold"
                    android:layout_marginTop="20dp"/>
                <LinearLayout
                    android:id="@+id/containerHistory"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"/>
            </LinearLayout>

        </LinearLayout>
    </ScrollView>
</RelativeLayout>